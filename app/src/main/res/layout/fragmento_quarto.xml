<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/quarto"
        android:layout_width="202dp"
        android:layout_height="0dp"
        android:layout_marginBottom="83dp"
        android:backgroundTint="@color/purple_700"
        android:text="Proximo"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resultadoIMC" />

    <TextView
        android:id="@+id/resultadoIMC"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginBottom="230dp"
        android:hint="IMC"
        app:layout_constraintBottom_toTopOf="@+id/quarto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nomeCliente" />

    <TextView
        android:id="@+id/nomeCliente"
        android:layout_width="193dp"
        android:layout_height="0dp"
        android:layout_marginTop="149dp"
        android:layout_marginBottom="82dp"
        android:hint="Nome"
        app:layout_constraintBottom_toTopOf="@+id/resultadoIMC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>